    <!--if -->
    <select id="findById2" resultMap="userDo">
        SELECT
        <include refid="column_List"/>
        FROM auth_user u WHERE u.status = 1
        <if test="id != null">
            AND u.id = #{id}
        </if>
    </select>

</mapper>